<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#171717"
    tools:context=".MainActivity">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <View
            android:id="@+id/divider3"

            android:layout_width="match_parent"
            android:layout_height="10dp"
            android:background="#FFFFFFFF"
            app:layout_constraintBottom_toTopOf="@id/mainListViewNotDone"
            app:layout_constraintTop_toBottomOf="@+id/llistaActivitats" />

        <TextView
            android:id="@+id/textView4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#FFFFFF"
            android:text="Favorite games"
            android:textAlignment="center"
            android:textColor="#000000"
            android:textStyle="bold" />

        <View
            android:id="@+id/divider4"

            android:layout_width="match_parent"
            android:layout_height="10dp"
            android:background="#FFFFFFFF"
            app:layout_constraintBottom_toTopOf="@id/mainListViewNotDone"
            app:layout_constraintTop_toBottomOf="@+id/llistaActivitats" />

        <ListView
            android:id="@+id/mainListViewDone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#353535"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/divider"></ListView>

        <View
            android:id="@+id/divider"

            android:layout_width="match_parent"
            android:layout_height="10dp"
            android:background="#FFFFFFFF"
            app:layout_constraintBottom_toTopOf="@id/mainListViewNotDone"
            app:layout_constraintTop_toBottomOf="@+id/llistaActivitats" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#FFFFFFFF"
            android:text="Games"
            android:textAlignment="center"
            android:textColor="#000000"
            android:textStyle="bold" />

        <View
            android:id="@+id/divider2"

            android:layout_width="match_parent"
            android:layout_height="10dp"
            android:background="#FFFFFFFF"
            app:layout_constraintBottom_toTopOf="@id/mainListViewNotDone"
            app:layout_constraintTop_toBottomOf="@+id/llistaActivitats" />

        <ListView
            android:id="@+id/mainListViewNotDone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#FFFFFFFF"

            android:clickable="true"
            app:layout_constraintBottom_toTopOf="@id/divider"
            app:layout_constraintEnd_toStartOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

        </ListView>

    </LinearLayout>


    <!--
    <ListView
        android:id="@+id/mainListView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="parent" />-->

</androidx.constraintlayout.widget.ConstraintLayout>